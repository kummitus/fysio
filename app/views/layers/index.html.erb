<p id="notice"><%= notice %></p>

<h1>Listing Layers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Categories</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @layers.each do |layer| %>
      <tr>
        <td><%= layer.name %></td>
        <td>
          <% layer.categories.each do |category| %>
              <%= category.name %> ,
          <% end %>
        </td>
        <td><%= link_to 'Show', layer %></td>
        <td><%= link_to 'Edit', edit_layer_path(layer) %></td>
        <td><%= link_to 'Destroy', layer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

