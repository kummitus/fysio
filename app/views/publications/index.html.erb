<p id="notice"><%= notice %></p>

<h1>Listing Publications</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Abstract</th>
      <th>Year</th>
      <th>Link</th>
      <th>Author</th>
      <th>Journal</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @publications.each do |publication| %>
      <tr>
        <td><%= publication.name %></td>
        <td><%= publication.abstract %></td>
        <td><%= publication.year %></td>
        <td><%= publication.link_id %></td>
        <td><%= publication.author_id %></td>
        <td><%= publication.journal %></td>
        <td><%= publication.category_id %></td>
        <td><%= link_to 'Show', publication %></td>
        <td><%= link_to 'Edit', edit_publication_path(publication) %></td>
        <td><%= link_to 'Destroy', publication, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

